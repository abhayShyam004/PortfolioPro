# =============================================================================
# PortfolioPro Docker Environment Variables
# Copy to .env.docker and fill in your values
# =============================================================================

# Django Settings
SECRET_KEY=your-super-secret-key-change-this
DEBUG=False
ALLOWED_HOSTS=portfoliopro.site,*.portfoliopro.site,localhost

# Database
DB_PASSWORD=your-strong-database-password

# Redis
REDIS_URL=redis://redis:6379/0

# Domain
MAIN_DOMAIN=portfoliopro.site

# Cloud Storage (optional - for S3/Cloudinary)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=

# Cloudinary (optional alternative)
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=
